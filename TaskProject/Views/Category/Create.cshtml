@model TaskProject.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<form method="post" style="background-color:aquamarine;" id="formValidate">
    <div class="border p-3 mt-4">
        <div class="row pb-2"> 
            <h2> Create a Category </h2>
            <hr />
        </div>
        @*@Html.ValidationSummary(true, "",new {@class = "text-danger"})*@
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"> Name </label>
            <input asp-for="Name" class="form-control" />
            @*<span asp-validation-for="Name"></span>*@
        </div>

        <div class="mb-3">
            <label asp-for="Description"> Description </label>
            <input asp-for="Description" class="form-control" />
            @*<span asp-validation-for="Description"></span>*@
        </div>

        <div class="form-group form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="isActive" /> @Html.DisplayNameFor(model=>model.isActive)
            </label>
            @*<span asp-validation-for="isActive"></span>*@
        </div>

        <button type="submit" onclick="MainSave()" style="width:150px" class="btn btn-primary" asp-controller="Category" asp-action="Create" > Create </button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index" > Back to List </a>
    </div>
</form>

