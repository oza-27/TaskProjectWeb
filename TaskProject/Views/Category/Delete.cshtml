@model TaskProject.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = null;

}

<form method="post" style="background-image:linear-gradient(fuchsia,green);">
    <div class="border p-3 mt-4">
       
        <div class="row pb-2">
            <h2> Delete Category </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"> Name </label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description"> Description </label>
            <input asp-for="Description" disabled class="form-control" />
        </div>

        <div class="form-group form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" disabled asp-for="isActive" /> @Html.DisplayNameFor(model=>model.isActive)
            </label>
        </div>

        <button type="submit" style="width:150px" asp-asp-controller="Category" asp-action="Delete" class="btn btn-primary"> Delete </button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index"> Back to List </a>
    </div>
</form>
